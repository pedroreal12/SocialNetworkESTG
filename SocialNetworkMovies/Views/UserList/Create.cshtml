@model SocialNetworkMovies.Models.UserList

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>UserList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StrName" class="control-label">List Name</label>
                <input asp-for="StrName" class="form-control" id="strListName"/>
                <span asp-validation-for="StrName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit"  id="createUserList" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" src="~/js/UserList/create.js"></script>
}
